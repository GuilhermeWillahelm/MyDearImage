@model IEnumerable<MyDearImage.Models.Post>

@{
    ViewData["Title"] = "MyPosts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="text-align:center; padding: 15px; padding-bottom: 50px;">
<a asp-action="Create"><i class="fa-solid fa-circle-plus" style="font-size: 40px; color: black;"></i></a>
</div>

@foreach (var item in Model) {
    <div class="card" style="width: 30rem;">
        <div class="card-body">
                <p class="card-title">@Html.DisplayFor(modelItem => item.UserName)</p>
            </div>
        <a asp-action="Details" asp-route-id="@item.Id" style="text-decoration: none;">
            <img src="@Html.DisplayFor(modelItem => item.Image)" class="card-img-top" alt="...">
            </a>
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
            </div>
            <div style="text-align:center;">
            <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-ruler"></i></a>
            <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash-can"></i></a>
        </div>
    </div>
}
