@model MyDearImage.Models.Post

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Html.DisplayFor(model => model.Title)</h1>

<div>
    <hr />
    <dl class="row mydetail">
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.Image)"/>
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LikeCount) Likes
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index"><i class="fa-solid fa-arrow-left"></i></a>
</div>
